{
    "compilerOptions": {
        "target": "es2022",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strict": true,
        "baseUrl": ".",
        "rootDir": "./",
        "outDir": "dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "ESNext",
        "jsx": "react",
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "custom.d.ts",
        "src/locales/**/*.json",
        "src/@types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}